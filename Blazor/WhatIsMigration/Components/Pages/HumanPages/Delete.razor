@page "/humans/delete"
@using Microsoft.EntityFrameworkCore
@using WhatIsMigration.Models
@inject IDbContextFactory<WhatIsMigration.Data.WhatIsMigrationContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Human</h2>
    <hr />
    @if (human is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">LastName</dt>
            <dd class="col-sm-10">@human.LastName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">FirstName</dt>
            <dd class="col-sm-10">@human.FirstName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">BirthDate</dt>
            <dd class="col-sm-10">@human.BirthDate</dd>
        </dl>
        <EditForm method="post" Model="human" OnValidSubmit="DeleteHuman" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(human is null)">Delete</button> |
            <a href="/humans">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Human? human;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        human = await context.Human.FirstOrDefaultAsync(m => m.Id == Id);

        if (human is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteHuman()
    {
        using var context = DbFactory.CreateDbContext();
        context.Human.Remove(human!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/humans");
    }
}
