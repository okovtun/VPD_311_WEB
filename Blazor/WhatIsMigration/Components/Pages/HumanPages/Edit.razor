@page "/humans/edit"
@using Microsoft.EntityFrameworkCore
@using WhatIsMigration.Models
@inject IDbContextFactory<WhatIsMigration.Data.WhatIsMigrationContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Human</h2>
<hr />
@if (Human is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Human" OnValidSubmit="UpdateHuman" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Human.Id" value="@Human.Id" />
                <div class="mb-3">
                    <label for="lastname" class="form-label">LastName:</label>
                    <InputText id="lastname" @bind-Value="Human.LastName" class="form-control" />
                    <ValidationMessage For="() => Human.LastName" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="firstname" class="form-label">FirstName:</label>
                    <InputText id="firstname" @bind-Value="Human.FirstName" class="form-control" />
                    <ValidationMessage For="() => Human.FirstName" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="birthdate" class="form-label">BirthDate:</label>
                    <InputDate id="birthdate" @bind-Value="Human.BirthDate" class="form-control" />
                    <ValidationMessage For="() => Human.BirthDate" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/humans">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Human? Human { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Human ??= await context.Human.FirstOrDefaultAsync(m => m.Id == Id);

        if (Human is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateHuman()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Human!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!HumanExists(Human!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/humans");
    }

    private bool HumanExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Human.Any(e => e.Id == id);
    }
}
